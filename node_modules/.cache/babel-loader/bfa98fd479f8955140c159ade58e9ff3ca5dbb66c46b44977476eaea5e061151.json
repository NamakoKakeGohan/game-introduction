{"ast":null,"code":"import { ref, watch, provide } from \"vue\";\nimport ProjectHeader from \"./components/ProjectHeader.vue\";\nimport HambergerMenu from \"./components/HambergerMenu.vue\";\nimport ProjectSidebar from \"./components/ProjectSidebar.vue\";\nimport ProjectFooter from \"./components/ProjectFooter.vue\";\n\n// グローバルなテーマ状態を管理\n\nexport default {\n  __name: 'App',\n  setup(__props, {\n    expose: __expose\n  }) {\n    __expose();\n    const theme = ref(\"light\"); // 初期値は \"light\"\n\n    // テーマを切り替える関数\n    const toggleTheme = () => {\n      theme.value = theme.value === \"light\" ? \"dark\" : \"light\";\n    };\n\n    // <html> 要素にクラスを追加\n    watch(theme, newTheme => {\n      const htmlElement = document.documentElement;\n      if (newTheme === \"dark\") {\n        htmlElement.classList.add(\"dark-theme\");\n        htmlElement.classList.remove(\"light-theme\");\n      } else {\n        htmlElement.classList.add(\"light-theme\");\n        htmlElement.classList.remove(\"dark-theme\");\n      }\n    });\n\n    // \n    provide(\"theme\", theme);\n    provide(\"toggleTheme\", toggleTheme);\n    const __returned__ = {\n      theme,\n      toggleTheme,\n      ref,\n      watch,\n      provide,\n      ProjectHeader,\n      HambergerMenu,\n      ProjectSidebar,\n      ProjectFooter\n    };\n    Object.defineProperty(__returned__, '__isScriptSetup', {\n      enumerable: false,\n      value: true\n    });\n    return __returned__;\n  }\n};","map":{"version":3,"names":["ref","watch","provide","ProjectHeader","HambergerMenu","ProjectSidebar","ProjectFooter","theme","toggleTheme","value","newTheme","htmlElement","document","documentElement","classList","add","remove"],"sources":["/Users/namako-mac/mysite/game-introduction/src/App.vue"],"sourcesContent":["<template>\n  <div class=\"layout\">\n    <ProjectHeader class=\"header\" />\n    <HambergerMenu />\n    <ProjectSidebar class=\"sidebar\" />\n    <main>\n      <router-view />\n    </main>\n    <ProjectFooter />\n  </div>\n</template>\n\n<script setup>\nimport { ref, watch, provide } from \"vue\";\nimport ProjectHeader from \"./components/ProjectHeader.vue\";\nimport HambergerMenu from \"./components/HambergerMenu.vue\";\nimport ProjectSidebar from \"./components/ProjectSidebar.vue\";\nimport ProjectFooter from \"./components/ProjectFooter.vue\";\n\n// グローバルなテーマ状態を管理\nconst theme = ref(\"light\"); // 初期値は \"light\"\n\n// テーマを切り替える関数\nconst toggleTheme = () => {\n  theme.value = theme.value === \"light\" ? \"dark\" : \"light\";\n};\n\n// <html> 要素にクラスを追加\nwatch(theme, (newTheme) => {\n  const htmlElement = document.documentElement;\n  if (newTheme === \"dark\") {\n    htmlElement.classList.add(\"dark-theme\");\n    htmlElement.classList.remove(\"light-theme\");\n  } else {\n    htmlElement.classList.add(\"light-theme\");\n    htmlElement.classList.remove(\"dark-theme\");\n  }\n});\n\n// \nprovide(\"theme\", theme);\nprovide(\"toggleTheme\", toggleTheme); \n</script>\n\n<style scoped>\n/* グローバル CSS */\n:root.light-theme {\n  --background-color: #ffffff;\n  --text-color: #000000;\n}\n\n:root.dark-theme {\n  --background-color: #121212;\n  --text-color: #ffffff;\n}\n\nbody {\n  background-color: var(--background-color);\n  color: var(--text-color);\n  transition: background-color 0.3s ease, color 0.3s ease;\n}\n\n.layout {\n  display: grid;\n  grid-template-areas:\n    \"header header\"\n    \"sidebar main\"\n    \"footer footer\";\n  grid-template-columns: 200px 1fr;\n  grid-template-rows: auto 1fr auto;\n  height: 100vh;\n}\n\n.header {\n  grid-area: header;\n  position: fixed;\n  top: 0;\n  left: 0;\n  width: 100%;\n  padding: 0;\n  z-index: 30;\n}\n\n.sidebar {\n  grid-area: sidebar;\n  position: fixed;\n  top: 100px;\n  left: 0;\n  height: calc(100vh - 60px);\n  z-index: 20;\n}\n\nmain {\n  grid-area: main;\n  padding: 1rem;\n  margin-top: 100px;\n}\n\nfooter {\n  grid-area: footer;\n}\n</style>\n"],"mappings":"AAaA,SAASA,GAAG,EAAEC,KAAK,EAAEC,OAAO,QAAQ,KAAK;AACzC,OAAOC,aAA