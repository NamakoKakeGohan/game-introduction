{"ast":null,"code":"import { ref, watch, provide } from \"vue\";\nimport ProjectHeader from \"./components/ProjectHeader.vue\";\nimport HambergerMenu from \"./components/HambergerMenu.vue\";\nimport ProjectSidebar from \"./components/ProjectSidebar.vue\";\nimport ProjectFooter from \"./components/ProjectFooter.vue\";\n\n// グローバルなテーマ状態を管理\n\nexport default {\n  __name: 'App',\n  setup(__props, {\n    expose: __expose\n  }) {\n    __expose();\n    const theme = ref(\"light\"); // 初期値は \"light\"\n    const htmlElement = document.documentElement;\n    htmlElement.classList.add(`${theme.value}-theme`);\n    const toggleTheme = () => {\n      theme.value = theme.value === \"light\" ? \"dark\" : \"light\";\n    };\n    watch(theme, newTheme => {\n      if (newTheme === \"dark\") {\n        htmlElement.classList.add(\"dark-theme\");\n        htmlElement.classList.remove(\"light-theme\");\n      } else {\n        htmlElement.classList.add(\"light-theme\");\n        htmlElement.classList.remove(\"dark-theme\");\n      }\n    });\n    provide(\"theme\", theme);\n    provide(\"toggleTheme\", toggleTheme);\n    const __returned__ = {\n      theme,\n      htmlElement,\n      toggleTheme,\n      ref,\n      watch,\n      provide,\n      ProjectHeader,\n      HambergerMenu,\n      ProjectSidebar,\n      ProjectFooter\n    };\n    Object.defineProperty(__returned__, '__isScriptSetup', {\n      enumerable: false,\n      value: true\n    });\n    return __returned__;\n  }\n};","map":{"version":3,"names":["ref","watch","provide","ProjectHeader","HambergerMenu","ProjectSidebar","ProjectFooter","theme","htmlElement","document","documentElement","classList","add","value","toggleTheme","newTheme","remove"],"sources":["/Users/namako-mac/mysite/game-introduction/src/App.vue"],"sourcesContent":["<template>\n  <div class=\"layout\">\n    <ProjectHeader class=\"header\" />\n    <HambergerMenu class=\"hamberger\" />\n    <ProjectSidebar class=\"sidebar\" />\n    <main>\n      <router-view />\n    </main>\n    <ProjectFooter class=\"footer\" />\n  </div>\n</template>\n\n<script setup>\nimport { ref, watch, provide } from \"vue\";\nimport ProjectHeader  from \"./components/ProjectHeader.vue\";\nimport HambergerMenu  from \"./components/HambergerMenu.vue\";\nimport ProjectSidebar from \"./components/ProjectSidebar.vue\";\nimport ProjectFooter  from \"./components/ProjectFooter.vue\";\n\n// グローバルなテーマ状態を管理\nconst theme = ref(\"light\"); // 初期値は \"light\"\nconst htmlElement = document.documentElement;\nhtmlElement.classList.add(`${theme.value}-theme`);\nconst toggleTheme = () => {\n  theme.value = theme.value === \"light\" ? \"dark\" : \"light\";\n};\nwatch(theme, (newTheme) => {\n  if (newTheme === \"dark\") {\n    htmlElement.classList.add(\"dark-theme\");\n    htmlElement.classList.remove(\"light-theme\");\n  } else {\n    htmlElement.classList.add(\"light-theme\");\n    htmlElement.classList.remove(\"dark-theme\");\n  }\n});\nprovide(\"theme\", theme);\nprovide(\"toggleTheme\", toggleTheme);\n</script>\n\n<style scoped>\n.layout {\n  display: grid;\n  grid-template-areas:\n    \"header header\"\n    \"sidebar main\"\n    \"footer footer\";\n  grid-template-columns: 200px 1fr;\n  grid-template-rows: auto 1fr auto;\n  height: 100vh;\n}\n\n/* ヘッダーを常に上部に固定 */\n.header {\n  grid-area: header;\n  position: fixed;\n  top: 0;\n  left: 0;\n  width: 100vw;\n  z-index: 30;\n}\n\n/* サイドバーを常に左側に固定 */\n.sidebar {\n  grid-area: sidebar;\n  position: fixed;\n  top: 60px; /* ヘッダーの高さに合わせて調整 */\n  left: 0;\n  width: 200px;\n  height: calc(100vh - 60px);\n  z-index: 20;\n  overflow-y: auto;\n}\n\n/* ハンバーガーメニューも固定（必要に応じて位置調整） */\n.hamberger {\n  position: fixed;\n  top: 10px;\n  left: 10px;\n  z-index: 40;\n}\n\n/* メインコンテンツはサイドバーとヘッダーの分だけ余白を取る */\nmain {\n  grid-area: main;\n  padding: 1rem;\n  margin-top: 60px;    /* ヘッダーの高さ */\n  margin-left: 200px;  /* サイドバーの幅 */\n  min-height: calc(100vh - 60px - 60px); /* ヘッダー・フッター分を引く */\n}\n\n/* フッターを常に下部に固定 */\n.footer {\n  grid-area: footer;\n  position: fixed;\n  left: 0;\n  bottom: 0;\n  width: 100vw;\n  z-index: 30;\n}\n\n/* レスポンシブ対応 */\n@media (max-width: 900px) {\n  .sidebar {\n    display: none;\n  }\n  main {\n    margin-left: 0;\n  }\n}\n</style>\n"],"mappings":"AAaA,SAASA,GAAG,EAAEC,KAAK,EAAEC,OAAO,QAAQ,KAAK;AACzC,OAAOC,aAAa,MAAO,gCAAgC;AAC3D,OAAOC,aAAa,MAAO,gCAAgC;AAC3D,OAAOC,cAAc,MAAM,iCAAiC;AAC5D,OAAOC,aAAa,MAAO,gCAAgC;;AAE3D;;;;;;;;IACA,MAAMC,KAAK,GAAGP,GAAG,CAAC,OAAO,CAAC,CAAC,CAAC;IAC5B,MAAMQ,WAAW,GAAGC,QAAQ,CAACC,eAAe;IAC5CF,WAAW,CAACG,SAAS,CAACC,GAAG,CAAC,GAAGL,KAAK,CAACM,KAAK,QAAQ,CAAC;IACjD,MAAMC,WAAW,GAAGA,CAAA,KAAM;MACxBP,KAAK,CAACM,KAAK,GAAGN,KAAK,CAACM,KAAK,KAAK,OAAO,GAAG,MAAM,GAAG,OAAO;IAC1D,CAAC;IACDZ,KAAK,CAACM,KAAK,EAAGQ,QAAQ,IAAK;MACzB,IAAIA,QAAQ,KAAK,MAAM,EAAE;QACvBP,WAAW,CAACG,SAAS,CAACC,GAAG,CAAC,YAAY,CAAC;QACvCJ,WAAW,CAACG,SAAS,CAACK,MAAM,CAAC,aAAa,CAAC;MAC7C,CAAC,MAAM;QACLR,WAAW,CAACG,SAAS,CAACC,GAAG,CAAC,aAAa,CAAC;QACxCJ,WAAW,CAACG,SAAS,CAACK,MAAM,CAAC,YAAY,CAAC;MAC5C;IACF,CAAC,CAAC;IACFd,OAAO,CAAC,OAAO,EAAEK,KAAK,CAAC;IACvBL,OAAO,CAAC,aAAa,EAAEY,WAAW,CAAC","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}