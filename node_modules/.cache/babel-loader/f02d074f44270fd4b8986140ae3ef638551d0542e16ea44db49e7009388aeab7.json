rk\") {\n    htmlElement.classList.add(\"dark-theme\");\n    htmlElement.classList.remove(\"light-theme\");\n  } else {\n    htmlElement.classList.add(\"light-theme\");\n    htmlElement.classList.remove(\"dark-theme\");\n  }\n});\n\n// provide テーマとトグル関数をOptionModalDialog.vueに渡す\nprovide(\"theme\", theme);\nprovide(\"toggleTheme\", toggleTheme);\n</script>\n\n<style scoped>\n.layout {\n  display: grid;\n  grid-template-areas:\n    \"header header\"\n    \"sidebar main\"\n    \"footer footer\";\n  grid-template-columns: 0 1fr;\n  grid-template-rows: auto 1fr auto;\n  height: 100vh;\n}\n\n.header {\n  grid-area: header;\n  position: fixed;\n  top: 0;\n  left: 0;\n  width: 100%;\n  padding: 0;\n  z-index: 30;\n}\n\n.sidebar {\n  grid-area: sidebar;\n  position: fixed;\n  top: 100px;\n  left: 0;\n  height: calc(100vh - 60px);\n  z-index: 20;\n}\n\nmain {\n  grid-area: main;\n  padding: 1rem;\n  margin-top: 100px;\n  margin-right: 200px;\n}\n\nfooter {\n  grid-area: footer;\n}\n</style>"],"mappings":";;EACOA,KAAK,EAAC;AAAQ;;;uBAAnBC,mBAAA,CAQM,OARNC,UAQM,GAPJC,YAAA,CAAgCC,MAAA;IAAjBJ,KAAK,EAAC;EAAQ,IAC7BG,YAAA,CAAiBC,MAAA,oBACjBD,YAAA,CAAkCC,MAAA;IAAlBJ,KAAK,EAAC;EAAS,IAC/BK,mBAAA,CAEO,eADLF,YAAA,CAAeG,sBAAA,E,GAEjBH,YAAA,CAAiBC,MAAA,mB","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}